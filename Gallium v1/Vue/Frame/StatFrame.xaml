<Page x:Class="Gallium_v1.Vue.Frame.StatFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gallium_v1.Vue.Frame"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatFrame">

    <Viewbox Stretch="UniformToFill">
        <Grid Height="450" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="90*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Button x:Name="PieChart" Content="Pie" Click="Pie_Click"/>
                <Button x:Name="CartesianChart" Content="Cartesian" Click="Cartesian_Click"/>
            </StackPanel>
            <Canvas x:Name="DrawChart" Grid.Column="1" Width="720" Height="450"></Canvas>
        </Grid>
    </Viewbox>
</Page>
