<Page x:Class="Gallium_v1.Vue.Frame.AccueilFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gallium_v1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccueilFrame">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Image MouseDown="IsTwitterClicked" Name="BouttonTwitter" Source="/Vue/Assets/logoTwitter.png" Grid.Column="3" Width="120" Height="120" VerticalAlignment="TOp" HorizontalAlignment="Center" Margin="20,46,20,0"/>
        <Image MouseDown="IsDriveClicked" Name="BoutonDrive" Source="/Vue/Assets/drive.png" Grid.Column="4" Width="200" Height="200" VerticalAlignment="TOp" HorizontalAlignment="Center"/>
        

    </Grid>
</Page>
