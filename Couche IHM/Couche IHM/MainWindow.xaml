<Window x:Class="Couche_IHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Couche_IHM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Background="Black">
            <Image />
            <Separator Height="110" Background="Transparent"/>

            <Button Content="Accueil" Margin="15" Click="GoToAccueil" />

            <Button Content="Caisse" Margin="15" Click="GoToCaisse"/>
            <Button Content="Adhérents" Margin="15" Click="GoToAdhérent"/>
            <Button Content="Stock" Margin="15" Click="GoToStock"/>
            <Button Content="Compte" Margin="15" Click="GoToCompte" />
            <Button Content="Statistiques" Margin="15" Click="GoToStatistique" />
        </StackPanel>

        <Frame x:Name="mainFrame" Grid.Column="1" Source="Frames/FrameAccueil.xaml"/>
    </Grid>
</Window>
