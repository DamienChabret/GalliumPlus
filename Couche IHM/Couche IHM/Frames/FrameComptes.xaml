<Page x:Class="Couche_IHM.Frames.FrameComptes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Couche_IHM.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FrameComptes"
      Background="White">

    <Grid>
        <!-- Ligne 1 - Colonne 0: Liste des adhérents-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- ScrollViewer des adhérents-->
        <Viewbox Stretch="Uniform" >
            <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Width="763" >
                <ListView x:Name="listUser"  HorizontalContentAlignment="Stretch" Margin="50,0,50,0" VerticalContentAlignment="Top" SelectionChanged="SelectUser"   >
                    <ListView.Template>
                        <ControlTemplate>
                            <!-- Header des colonnes -->
                            <DockPanel   LastChildFill="True">
                                <Grid DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="4*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>


                                    <Button  BorderThickness="0"  Width="200" Margin="-20,0,0,0"  Background="Transparent"   FontWeight="Medium" FontFamily="Roboto"  FontSize="18" Click="SortIdentite" Content="Mail" />
                                    <Image Name="identiteTri" Visibility="Hidden"   Width="20" HorizontalAlignment="Left"/>

                                    <Button BorderThickness="0"   Background="Transparent" Grid.Column="1"  Grid.Row="0" FontWeight="Medium" FontFamily="Roboto"  FontSize="18" Click="SortId" Content="Nom" />
                                    <Image Name="idTri" Visibility="Hidden" Grid.Column="1"   Width="20" HorizontalAlignment="Left"/>
                                    <Button BorderThickness="0"    Background="Transparent" Grid.Column="1"  Grid.Row="0" FontWeight="Medium" FontFamily="Roboto"  FontSize="17" Content="Identifiant" Click="SortMail" />
                                    <Image Name="mailTri" Visibility="Hidden" Grid.Column="1"   Width="20" HorizontalAlignment="Left"/>

                                    <Button BorderThickness="0"  Background="Transparent" Grid.Column="2" Grid.Row="0" FontWeight="Medium" FontFamily="Roboto"  FontSize="17" Content="Role" Click="SortRole"/>
                                    <Image x:Name="roleTri" Visibility="Hidden" Grid.Column="2"  Width="20" HorizontalAlignment="Left"/>

                                    <Rectangle Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6"  Height="2" Fill="Black" Margin="0,0,0,10"/>

                                </Grid>
                                <!-- items de la listview -->
                                <ItemsPresenter></ItemsPresenter>
                            </DockPanel>
                        </ControlTemplate>
                    </ListView.Template>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Content -->
                                <Label Content="{Binding Mail}" Grid.Column="1" FontWeight="Medium" FontFamily="Roboto" FontSize="18"/>
                                <Label Content="{Binding NomComplet}" Grid.Column="0" FontWeight="Medium" FontFamily="Roboto" FontSize="18"/>
                                <Label Content="{Binding Role}" Grid.Column="2" FontWeight="Medium" FontFamily="Roboto" FontSize="18"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Viewbox>

        <!-- Bouton Ajouter -->
        <Button x:Name="addAdherent" Content="Ajouter" Height="50" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20" Background="#252422" Foreground="White" Click="AddAdherentButton"/>

        <!-- Information utilisateur sélectionner -->
        <Viewbox Stretch="Uniform" Grid.Column="1"  Grid.Row="0" >
            <StackPanel>
                <Grid >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Barre de recherche -->
                    <TextBox Name="rechercheAcompte" Height="25"  Tag="Recherche..."   HorizontalAlignment="Stretch" Grid.ColumnSpan="2" TextChanged="SearchAdherent"   />

                    <Image Source="/Images/loupe.png" Grid.Column="1" Width="22" HorizontalAlignment="Right" Margin="0,0,10,0" />
                </Grid>


                <!-- Info -->
                <Grid >
                    <Border Name="infoUser" BorderBrush="Black" BorderThickness="1" Visibility="Visible"    CornerRadius="8" Background="DarkSlateGray" Width="136" Margin="0,20,0,45" >

                        <StackPanel Margin="0,0,0,8" >

                            <!-- Nom utilisateur -->
                            <TextBlock Text="Mail" HorizontalAlignment="Left" Margin="10,5,10,10" FontSize="12"  FontWeight="Bold" Foreground="White" TextDecorations="Underline">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="2"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" >
                                <TextBox x:Name="mailuser" Text="" FontSize="12"  Foreground="Black" TextChanged="ShowValidationButton"/>
                                <Image x:Name="identiteWarning" Visibility="Hidden" Source="/Images/warning.png" Height="10" Width="10" VerticalAlignment="Top" Margin="-5,-5,0,0"/>
                            </StackPanel>



                            <!-- Compte utilisateur -->
                            <TextBlock  Text="Nom Complet" HorizontalAlignment="Left" Margin="10" FontSize="12" FontWeight="Bold" Foreground="White" TextDecorations="Underline">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="2"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                                <TextBox x:Name="nomComplet" Text="" FontSize="12" Foreground="Black" TextChanged="ShowValidationButton" />
                                <Image x:Name="compteWarning" Visibility="Hidden" Source="/Images/warning.png" Height="10" Width="10" VerticalAlignment="Top" Margin="-5,-5,0,0"/>
                            </StackPanel>


                            <!-- Bypass utilisateur -->
                            <TextBlock  Text="Role" HorizontalAlignment="Left" Margin="10" FontSize="12" FontWeight="Bold" Foreground="White" TextDecorations="Underline">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" ShadowDepth="2"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <ComboBox x:Name="roleList" Margin="10" Height="15">
                                <ComboBoxItem FontSize="20">
                                    
                                </ComboBoxItem>
                            </ComboBox>
                            
                            
                        </StackPanel>


                    </Border>
                    <Button BorderBrush="Green" Margin="10"  x:Name="buttonValidate" Visibility="Hidden" Content="Valider" Background="#252422"  Foreground="White" VerticalAlignment="Bottom" Click="ValiderChangements"/>
                </Grid>

            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
