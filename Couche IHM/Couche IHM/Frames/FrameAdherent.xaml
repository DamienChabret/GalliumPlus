<Page x:Class="Couche_IHM.Frames.FrameAdherent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Couche_IHM.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FrameAdherent"
      Background="White">

    <Grid>

        <!-- Ligne 1 - Colonne 0: Liste des adhérents-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- ScrollViewer des adhérents-->
        <ScrollViewer  VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,50"   >
            <ListView  x:Name="listadherents"  HorizontalContentAlignment="Stretch"  VerticalContentAlignment="Top" SelectionChanged="SelectAdherent"     >
                <ListView.Template>
                    <ControlTemplate>
                        <!-- Header des colonnes -->
                        <DockPanel   LastChildFill="True">
                            <Grid DockPanel.Dock="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>


                                <Button  BorderThickness="0"  Margin="-50,0,0,0"  Background="Transparent"   FontWeight="Medium" FontFamily="Roboto"  FontSize="17" Click="SortIdentite" Content="Nom et prénom" />
                                <Image Name="identiteTri" Visibility="Hidden"   Width="20" HorizontalAlignment="Left"/>

                                <Button BorderThickness="0"    Background="Transparent" Grid.Column="1"  Grid.Row="0" FontWeight="Medium" FontFamily="Roboto"  FontSize="17" Click="SortId" Content="Acompte" />
                                <Image Name="idTri" Visibility="Hidden" Grid.Column="1"   Width="20" HorizontalAlignment="Left"/>

                                <Button BorderThickness="0"  Background="Transparent" Grid.Column="2" Grid.Row="0" FontWeight="Medium" FontFamily="Roboto"  FontSize="17" Click="SortArgent" Content="Monnaie "/>
                                <Image x:Name="argentTri" Visibility="Hidden" Grid.Column="2"  Width="20" HorizontalAlignment="Left"/>



                                <Rectangle Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6"  Height="2" Fill="Black" Margin="30,5,20,10"/>

                            </Grid>
                            <!-- items de la listview -->
                            <ItemsPresenter ></ItemsPresenter>
                        </DockPanel>
                    </ControlTemplate>
                </ListView.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Content -->
                            <Label  Content="{Binding NomCompletIHM}" Margin="40,0,0,0" Grid.Column="0" FontWeight="Medium" FontFamily="Roboto" FontSize="14"/>
                            <Label Content="{Binding Identifiant}" Margin="30,0,0,0" Grid.Column="1" FontWeight="Medium" FontFamily="Roboto" FontSize="14"/>
                            <Label Content="{Binding ArgentIHM}" Margin="50,0,0,0" Grid.Column="2" FontWeight="Medium" FontFamily="Roboto" FontSize="14"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListView>
        </ScrollViewer>


        <!-- Bouton Ajouter -->
        <Border BorderThickness="1" VerticalAlignment="Bottom" Margin="0,0,0,8" Height="25" Width="200"  HorizontalAlignment="Center">
            <Border.BorderBrush>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Rectangle StrokeDashArray="4 2" Stroke="Gray" StrokeThickness="6"
                  Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualWidth}"
                  Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualHeight}"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.BorderBrush>

            <Button x:Name="addAdherent" Content="+"   BorderThickness="0" Background="White" Foreground="#252422" Click="AddAdherentButton" />
        </Border>


        <!-- Information utilisateur sélectionner -->
        <StackPanel Grid.Column="1"  Grid.Row="0">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Barre de recherche -->
                <TextBox Name="rechercheAcompte" Height="30"  Tag="Recherche..." Width="180" Style="{StaticResource WaterMarkTextBox}"   HorizontalAlignment="Stretch" Grid.ColumnSpan="2" TextChanged="SearchAdherent"   />

                <Image Source="/Images/loupe.png" Grid.Column="1" Width="22" HorizontalAlignment="Right" Margin="0,0,80,0" />
            </Grid>


            <!-- Info -->
            <Grid Margin="0,60,0,0" Height="289" Width="166" HorizontalAlignment="Center" >
                <Border  Name="infoAdherent" BorderBrush="DodgerBlue" BorderThickness="1" Visibility="Visible"  Background="LightGray"    CornerRadius="3"   Margin="0,0,0,10"   >

                    <StackPanel Margin="0,0,0,8" >

                        <!-- Nom utilisateur -->
                        <TextBlock Text="Identité" HorizontalAlignment="Left" Margin="10,5,10,10" FontSize="12"  FontWeight="Bold" Foreground="Black" TextDecorations="Underline"/>
                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" >
                            <TextBox x:Name="name" Text="" FontSize="12"  Foreground="Black" TextChanged="ShowValidationButton"/>
                            <Image x:Name="identiteWarning" Visibility="Hidden" Source="/Images/warning.png" Height="10" Width="10" VerticalAlignment="Top" Margin="-5,-5,0,0"/>
                        </StackPanel>



                        <!-- Compte utilisateur -->
                        <TextBlock  Text="Compte" HorizontalAlignment="Left" Margin="10" FontSize="12" FontWeight="Bold" Foreground="Black" TextDecorations="Underline"/>
                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                            <TextBox x:Name="id" Text="" FontSize="12" Foreground="Black" TextChanged="ShowValidationButton" />
                            <Image x:Name="compteWarning" Visibility="Hidden" Source="/Images/warning.png" Height="10" Width="10" VerticalAlignment="Top" Margin="-5,-5,0,0"/>
                        </StackPanel>


                        <!-- Bypass utilisateur -->
                        <TextBlock  Text="ByPass" HorizontalAlignment="Left" Margin="10" FontSize="12" FontWeight="Bold" Foreground="Black" TextDecorations="Underline"/>
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <RadioButton Margin="-15,0,0,0" x:Name="ouibypass" Foreground="Black" FontSize="12" Content="Oui" Checked="ShowValidationButton"  />
                            <RadioButton Margin="15,0,0,0" x:Name="nonbypass" Foreground="Black" FontSize="12" Content="Non" Checked="ShowValidationButton"/>
                        </StackPanel>


                        <!-- Balance utilisateur -->
                        <TextBlock Text="Balance" HorizontalAlignment="Left" Margin="10" FontSize="12"  FontWeight="Bold" Foreground="Black" TextDecorations="Underline"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBox x:Name="argent" Text="" FontSize="12"  Foreground="Black" TextChanged="ShowValidationButton" />
                            <Image x:Name="argentWarning" Visibility="Hidden" Source="/Images/warning.png" Height="10" Width="10" VerticalAlignment="Top" Margin="-5,-5,0,0"/>
                        </StackPanel>

                    </StackPanel>


                </Border>
                <Button  BorderBrush="Red"   x:Name="buttonSupprime" Visibility="Hidden" Content="Supprimer" Background="#252422"  Foreground="White" VerticalAlignment="Top" Width="120" Click="DeleteAdherent"  HorizontalAlignment="Center" Margin="0,231,0,0"/>
                <Button BorderBrush="Green"   x:Name="buttonValidate" Visibility="Hidden" Content="Valider" Background="#252422"  Foreground="White" VerticalAlignment="Top" Width="120" Click="ValiderChangements" HorizontalAlignment="Center" Margin="0,231,0,0"/>
            </Grid>

        </StackPanel>
    </Grid>
</Page>
