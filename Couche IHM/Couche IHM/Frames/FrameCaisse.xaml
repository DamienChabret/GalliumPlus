<Page x:Class="Couche_IHM.Frames.FrameCaisse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Couche_IHM.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FrameCaisse"
      Background="White">

    <Grid>
        <!-- Definitions colonnes -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1.2*" />
        </Grid.RowDefinitions>

        <!-- Header de la frame -->
        <Grid Grid.ColumnSpan="2" Grid.Row="0" >
            <!-- Nom de la frame  -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Caisse" FontSize="22" VerticalAlignment="Center" Margin="40,0,0,0" Foreground="Black" TextDecorations="Underline" FontWeight="Medium"/>
            </StackPanel>

            <!-- Info du compte connecté-->
            <Grid HorizontalAlignment="Right"   Width="300">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*" />
                    <ColumnDefinition Width="10*" />
                </Grid.ColumnDefinitions>
                <!-- Image du compte  -->
                <Image x:Name="PhotoDeProfil" Grid.Column="0" Source="/Images/DogoPp.png" Width="50" Height="auto" VerticalAlignment="Center"  HorizontalAlignment="Right" />
                <StackPanel Grid.Column="1" Margin="10,20,10,0">
                    <Label Name="NomUtilisateur" Content="" FontSize="14" FontWeight="Bold"/>
                    <Label Name="RoleUtilisateur" Content="" FontSize="11" FontWeight="DemiBold" />
                </StackPanel>
            </Grid>
        </Grid>
        
        <!-- Liste des produits -->
        <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" >
            <ScrollViewer VerticalScrollBarVisibility="Hidden"  HorizontalScrollBarVisibility="Disabled" Margin="0 3 50 0">
                <StackPanel x:Name="productsSP"/>

            </ScrollViewer>
        </Grid>

        <!-- Panier d'achat -->
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label  FontWeight="Medium" FontFamily="Roboto" FontSize="18" Foreground="#FF403D39">Panier</Label>
            <Rectangle  Fill="#FF403D39" VerticalAlignment="Bottom" Height="2"/>
        </StackPanel>
        <ScrollViewer Margin="0,40,0,0"  Grid.Column="1"  Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <ListView  Name="Order" >
                <ListView.Template>
                    <ControlTemplate>
                        <DockPanel LastChildFill="True">
                            <ItemsPresenter ></ItemsPresenter>
                        </DockPanel>
                    </ControlTemplate>
                </ListView.Template>
                <ListView.ItemTemplate >
                    <DataTemplate >

                        <Grid Width="220">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Key.NomProduit}" Grid.Column="1" VerticalAlignment="Center"  FontWeight="Medium"/>
                            <!-- Nombre de produit -->
                            <Label x:Name="numberP" Content="{Binding Value}" Grid.Column="0" VerticalAlignment="Center" ContentStringFormat="x{0}"  />
                            <!-- Bouton pour enlever le produit -->
                            <Button Style="{StaticResource buttonImage}"   HorizontalAlignment="Right"  Height="20" Grid.Column="2" Width="25"  >
                                <Image  Source="/Images/moins.png" Tag="{Binding Key.NomProduit}" MouseDown="RemoveProduct"   />
                            </Button>

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <!-- Information de paiement -->
        <Grid Grid.Column="1" Grid.Row="2"  Background="#302F2F" Height="auto">
            <StackPanel>
                <!-- Paiment -->

                    <Label Content="Moyen de paiment" Foreground="White" FontSize="10" HorizontalAlignment="Center" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0"/>
                    <ComboBox Name="listeMoyenPayement" SelectedIndex="0" Height="15" Width="150" FontSize="8" Grid.ColumnSpan="2" Grid.Row="1"/>
                    <!-- Prix -->
                <StackPanel Orientation="Horizontal">
                    <Label Content="Prix A :" VerticalAlignment="Center" Foreground="White" FontSize="10" />
                    <Label Name="PriceA" Content="0.00 €" Foreground="White" FontSize="15" VerticalAlignment="Center" Margin="30,0,0,0"    />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Prix NA :" VerticalAlignment="Center" Foreground="White" FontSize="10" />
                    <Label Name="PriceNA" Content="0.00 €" Foreground="White" FontSize="15" VerticalAlignment="Center" Margin="30,0,0,0"    />
                </StackPanel>
                <!-- Bouton Payer-->
                <Grid  MouseEnter="Buy_MouseEnter" MouseLeave="Buy_MouseLeave" Background="Black"   MouseDown="PayCaisse">
                    <Label Content="Payer" HorizontalAlignment="Center" Foreground="White" FontSize="12"/>
                </Grid>
            </StackPanel>



           

            


           

        </Grid>
    </Grid>
</Page>
