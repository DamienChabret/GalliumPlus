<Window x:Class="Couche_IHM.Frames.FenetreAchat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Couche_IHM.Frames"
        mc:Ignorable="d"
        Title="Acomptes" 
        Height="150" 
        Width="400">
    <Grid>
        <!-- Définitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="searchAdhérent" Grid.Row="0" Grid.ColumnSpan="2" TextChanged="UpdateListAcompte" />
        <ComboBox x:Name="listAcompte" Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button x:Name="buys" Content="Valider" Grid.Row="2" Grid.Column="0" Margin="10" Click="buys_Click"/>
        <Button x:Name="cancel" Content="Annuler" Grid.Row="2" Grid.Column="1" Margin="10" Click="cancel_Click"/>
    </Grid>

</Window>
