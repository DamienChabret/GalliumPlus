<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>Couche_IHM</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\Logo\Logo_Gallium.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Icone\modif2.png" />
    <None Remove="Assets\Logo\Logo_Gallium.png" />
    <None Remove="Fonts\Riberio.ttf" />
    <None Remove="Fonts\There Brat.ttf" />
    <None Remove="Images\galliumlite.png" />
    <None Remove="Images\logoEtiq.png" />
    <None Remove="Images\plein_ecran.png" />
    <None Remove="Images\unknownProduct.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Logo\Logo_Gallium.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ClosedXML" Version="0.100.3" />
    <PackageReference Include="Extended.Wpf.Toolkit" Version="4.5.0" />
    <PackageReference Include="MaterialDesignThemes" Version="4.9.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Couche Métier\Couche Métier.csproj" />
    <ProjectReference Include="..\Modeles\Modeles.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Icone\modif2.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Logo\Logo_Gallium.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Fonts\Riberio.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Fonts\There Brat.ttf">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\galliumlite.png" />
    <Resource Include="Images\logoEtiq.png" />
    <Resource Include="Images\plein_ecran.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Images\unknownProduct.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
