<UserControl x:Class="Couche_IHM.CustomListView.DetailedProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Couche_IHM.CustomListView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Width="120" x:Name="boutonDp" Padding="5" Background="Transparent" BorderThickness="0" IsEnabled="{Binding isDisponible}">
        <StackPanel>
            <Image Width="auto" Margin="0 0 0 5"  x:Name="image" />
            <TextBlock Margin="0 0 0 5" FontSize="16" Text="{Binding NomProduit}" x:Name="name" FontWeight="Medium"/>
            <TextBlock FontSize="14" Text="{Binding Path=Quantite, StringFormat='Stock : {0}'}" x:Name="stock" FontWeight="Bold"/>
            <TextBlock FontSize="14"  Text="{Binding Path=PrixAdherentIHM, StringFormat='Prix A : {0}'}" x:Name="priceA"/>
            <TextBlock FontSize="14"  Text="{Binding Path=PrixNonAdherentIHM, StringFormat='Prix NA : {0}'}" x:Name="priceNA"/>
        </StackPanel>
    </Button>
</UserControl>
